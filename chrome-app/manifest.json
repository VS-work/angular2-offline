{
  "name": "Example",
  "short_name": "Example",
  "description": "Explore and present Gapminder data when you don't have internet connection!",
  "version": "0.0.6",
  "offline_enabled": true,
  "manifest_version": 2,
  "permissions": [
    "syncFileSystem",
    {"fileSystem": ["write", "retainEntries", "directory"]} ,
    "unlimitedStorage",
    "*://*/*"
  ],
  "icons": {
    "16": "icons/16x16.png",
    "24": "icons/24x24.png",
    "32": "icons/32x32.png",
    "48": "icons/48x48.png",
    "1024": "icons/1024x1024.png"
  },
  "sandbox": {
    "pages": ["./index.html"],
    "content_security_policy": "unsafe-eval"
  },
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  }
}
